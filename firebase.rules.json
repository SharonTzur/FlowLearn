{
  "rules": {
    "users":{
      ".read": true,
      ".write": true,
      "$uid": {
        ".read": true,
        ".write": true
      }
    },

    "tasks": {
      "$uid": {
        ".read": "auth !== null && auth.uid === $uid",
        ".write": "auth !== null && auth.uid === $uid",
        ".indexOn": ["completed"]
      }
    }
  }
}
